%header.header
  .back
    = link_to page_path(id: 'helper_journey_add'), :title => "Profile" do
      = fa_icon "long-arrow-left"
%main.main
  %section.container
    %section.body
      %section.card

        %h2
          = t('helper_pending_journey.title')

        =image_tag "app-grabs/profile_dimitri.png", :alt => "Profile image", :class => "profile-img"

      %section.key.card
        = render partial: 'partials/route_large'

    %section.actions.primary
      = render partial: "partials/button", locals: {one: I18n.t('button.view_profile'), myclass: 'button primary'}

  = render partial: 'partials/about_station'
