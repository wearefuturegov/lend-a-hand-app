%main.main.cover
  %section.container
    %section.body

      %section.card.profile

        %h1
          = t('helper_profile_view.title')

        = image_tag "app-grabs/profile_003.png", :alt => "Profile image", :class => "profile-img"


      %section.card
        %p
          = t('helper_profile_view.about')

        %p
          = t('helper_profile_view.help')

      %section.card
        %h2 
          = t('helper_profile_view.tags')

        = render partial: "partials/tags", locals: {tag_a: I18n.t('helper_tag.tag_a'), tag_b: I18n.t('helper_tag.tag_b'), tag_c: I18n.t('helper_tag.tag_c'), tag_d: I18n.t('helper_tag.tag_d'), tag_e: I18n.t('helper_tag.tag_e'), tag_f: I18n.t('helper_tag.tag_f')}

      %section.actions.secondary
        = render partial: "partials/button", locals: {one: I18n.t('button.flag'), page: 'concern', myclass: 'button secondary confirm'}


    %section.actions.primary
      = render partial: "partials/button", locals: {one: I18n.t('button.feedback'), page: 'feedback', myclass: 'button primary confirm'}