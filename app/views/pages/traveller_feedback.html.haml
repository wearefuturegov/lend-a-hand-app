%header.header
  .back
    = link_to page_path(id: 'traveller_helper_profile'), :title => "Profile" do
      = fa_icon "long-arrow-left"
%main.main
  %section.container
    %section.body

      %section.card
        %h1
          = t('feedback.title')
        .form
          %p 
            = t('feedback.helper_info')
          %input{:placeholder => t('feedback.placeholder')}

      %section.card
        = render partial: "partials/tags", locals: {tag_a: I18n.t('helper_tag.tag_a'), tag_b: I18n.t('helper_tag.tag_b'), tag_c: I18n.t('helper_tag.tag_c'), tag_d: I18n.t('helper_tag.tag_d'), tag_e: I18n.t('helper_tag.tag_e'), tag_f: I18n.t('helper_tag.tag_f')}


    %section.actions.primary
      = render partial: "partials/button", locals: {one: I18n.t('button.send'), myclass: 'button primary'}