%main.main
  %section.container
    %section.body
      %section.card.divide
        %h1
          = t('helper_journey_create.title')

        %h2
          = t('helper_journey_create.info')

        %section.primary
          = render partial: "partials/button", locals: {one: I18n.t('button.add_journey'), myclass: 'button primary'}

      %section.card
        .info
          = t('helper_journeys.upcoming')
        = link_to page_path(id: 'helper_journey_upcoming'), :title => "Search Details" do
          %section.card.divide
            .info.profile
              =image_tag "app-grabs/traveller_profile.png", :alt => "Profile image", :class => "profile-img"
            .info.right 
              %span
                = fa_icon "angle-right"
            .info.extra
              = t('traveller_profile.name')

        %section.card
          .info
            = t('helper_journeys.pending')
          = link_to page_path(id: 'helper_journey_pending'), :title => "Pending Journey" do
            %section.card.divide
              .info.profile
                =image_tag "app-grabs/profile_dimitri.png", :alt => "Profile image", :class => "profile-img"
              .info.right 
                %span
                  = fa_icon "angle-right"
              .info.extra
                = t('dummy.name_c')

      %section.card
        %p
          = t('helper_journeys.faq')

    %section.actions.secondary
      = render partial: "partials/button", locals: {one: I18n.t('button.journey'), myclass: 'button secondary active'}
      = render partial: "partials/button", locals: {one: I18n.t('button.message'), myclass: 'button secondary'}
      = render partial: "partials/button", locals: {one: I18n.t('button.profile'), page: 'helper_profile', myclass: 'button secondary'}