%main.main
  %section.container
    %section.body

      %section.card.divide
        %h1
          = t('traveller_profile.title')

        = render partial: "partials/profile", locals: {title: I18n.t('traveller_profile.title'), name: I18n.t('traveller_profile.name'), info: I18n.t('traveller_profile.info')}

      %section.card
        %h2 
          = t('traveller_profile.help')

        = render partial: "partials/tags", locals: {tag_a: I18n.t('traveller_tag.tag_a'), tag_b: I18n.t('traveller_tag.tag_b'), tag_c: I18n.t('traveller_tag.tag_c'), tag_d: I18n.t('traveller_tag.tag_d'), tag_e: I18n.t('traveller_tag.tag_e'), tag_f: I18n.t('traveller_tag.tag_f')}

    %section.actions.primary
      = render partial: "partials/button", locals: {one: I18n.t('button.message'), page: 'chat', myclass: 'button primary confirm'}