%main.main.profile-route
  %section.container
    %section.body
      %section.actions.secondary
        = link_to "Profile", profile_path, :class => 'button secondary'
        = link_to "Route", profile_route_path, :class => 'button secondary active'
        = link_to "Contact", profile_contact_path, :class => 'button secondary'

      %section.card
        %section.profile
          =image_tag "app-grabs/profile400x400.png", :alt => "Profile image", :class => "profile-img"
          
