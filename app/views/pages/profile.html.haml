%main.main
  %section.container
    %section.body
      %section.actions.secondary
        = render partial: "partials/button", locals: {one: I18n.t('button.profile'), page: 'profile', myclass: 'button secondary active'}
        = render partial: "partials/button", locals: {one: I18n.t('button.route'), page: 'profile_route', myclass: 'button secondary'}
        = render partial: "partials/button", locals: {one: I18n.t('button.contact'), page: 'profile_contact', myclass: 'button secondary'}

      %section.card
        %h1
          = t('traveller_profile.title')
        
        = render partial: "partials/profile", locals: {title: I18n.t('helper_profile.title'), name: I18n.t('helper_profile.name'), info: I18n.t('helper_profile.info')}


      %section.card
        %section
          .info Lending a hand since:
          .info.right 13/05/17

        %section
          .info People helped:
          .info.right 22

      %section.card
        %h2 
          = t('helper_profile.feedback')

        = render partial: "partials/tags", locals: {tag_a: I18n.t('dummy.tag_a'), tag_b: I18n.t('dummy.tag_b'), tag_c: I18n.t('dummy.tag_c'), tag_d: I18n.t('dummy.tag_d'), tag_e: I18n.t('dummy.tag_e'), tag_f: I18n.t('dummy.tag_f')}

      %section.actions.secondary
        = render partial: "partials/button", locals: {one: I18n.t('button.decline'), page: 'sorry', myclass: 'button secondary'}

    %section.actions.primary
      = render partial: "partials/button", locals: {one: I18n.t('button.accept'), page: 'helper_status', myclass: 'button primary confirm'}