%main.main.search-details
  %section.container
    %section.body
      %header.header
        .back
          = link_to page_path(id: 'traveller_journey_create'), :title => "Profile" do
            = fa_icon "long-arrow-left"
      %section.card

        %h2
          = t('traveller_search_details.info')

      %section.key.card.divide
        = render partial: 'partials/route_large'

      %h2
        = t('traveller_search_details.departure')
      
      = render partial: 'partials/traveller_departure'

    %section.actions.primary
      = render partial: 'partials/button', locals: {one: I18n.t('button.find_traveller'), page: 'traveller_journey_review', myclass: 'button primary confirm'}

= render partial: 'partials/about_station'
